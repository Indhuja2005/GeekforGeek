class Solution {
    public int[] searchRange(int[] nums, int target) {
        int n=nums.length;
        int left=0;
        int right=n-1;int first=-1;
        int last=-1;
        while(left<=right){
            int mid=(left+right)/2;
            if(nums[mid]==target){
                while(mid >left && nums[mid-1]==target){
                    mid--;
                }
                first=mid;
                while(mid<right && nums[mid+1]==target){
                    mid++;
                }
                last=mid;
                break;
            }
            else if(nums[mid]>target){
                right=mid-1;
            }
            else{
                left=mid+1;
            }
        }
        return new int[]{first,last};
        
    }
}
